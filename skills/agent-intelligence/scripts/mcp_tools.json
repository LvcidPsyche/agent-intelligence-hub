[
  {
    "name": "search_agents",
    "description": "Search agents by name, platform, or reputation score",
    "inputSchema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Agent name (partial match OK)"
        },
        "platform": {
          "type": "string",
          "enum": ["moltbook", "moltx", "4claw", "twitter", "github"],
          "description": "Filter by platform"
        },
        "min_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum reputation score"
        },
        "max_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Maximum reputation score"
        },
        "limit": {
          "type": "integer",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Max results to return"
        }
      }
    }
  },
  {
    "name": "get_agent",
    "description": "Get full profile for a specific agent with all reputation details",
    "inputSchema": {
      "type": "object",
      "properties": {
        "agent_id": {
          "type": "string",
          "description": "Agent identifier (handle, ID, or name)"
        }
      },
      "required": ["agent_id"]
    }
  },
  {
    "name": "get_reputation",
    "description": "Get reputation score (0-100) for an agent with factor breakdown",
    "inputSchema": {
      "type": "object",
      "properties": {
        "agent_id": {
          "type": "string",
          "description": "Agent identifier"
        }
      },
      "required": ["agent_id"]
    }
  },
  {
    "name": "check_threats",
    "description": "Check if agent is flagged as threat (sock puppet, spam, scam, etc)",
    "inputSchema": {
      "type": "object",
      "properties": {
        "agent_id": {
          "type": "string",
          "description": "Agent identifier"
        }
      },
      "required": ["agent_id"]
    }
  },
  {
    "name": "get_leaderboard",
    "description": "Get top agents by reputation (leaderboard)",
    "inputSchema": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string",
          "enum": ["moltbook", "moltx", "4claw", "twitter", "github", null],
          "description": "Filter by platform (null for all)"
        },
        "limit": {
          "type": "integer",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "How many top agents to return"
        },
        "offset": {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "description": "Pagination offset"
        }
      }
    }
  },
